<%- include("partials/header.ejs", { 
  signedIn: signedIn, 
  currentSection: "SignUp" 
}) %>

<div class="d-flex align-items-center py-4">
  <div class="form-signin w-25 m-auto">
    <form action="/signup" method="post">
      <h1 class="h3 mb-3 fw-normal">Account Setup</h1>
      <div class="form-floating py-1">
        <input type="email" class="form-control py-2" id="floatingInput" name="emailAddress" placeholder="name@example.com">
        <label for="floatingInput">Email address</label>
      </div>
      <div class="form-floating py-1">
        <input type="text" class="form-control py-2" id="floatingName" name="userName" placeholder="Fido">
        <label for="floatingInput">Name</label>
      </div>
      <div class="form-floating py-1">
        <input type="password" class="form-control py-2" id="floatingPassword" name="password" placeholder="Password">
        <label for="floatingPassword">Password</label>
      </div>
      <div class="py-1">
        <button class="btn btn-primary w-100 py-2" type="submit">Sign up</button>
      </div>
    </form>
  </div>
</div>

<div class="d-flex align-items-center w-25 m-auto">
  <% if (invalidEmail) { %>
    <span class="text-danger">Please enter a valid email address.</span>
  <% } %>  
  <% if (invalidName) { %>
    <span class="text-danger">Please enter a name.</span>
  <% } %>
  <% if (invalidPassword) { %>
    <span class="text-danger">Please enter a valid password.</span>
  <% } %>
  <% if (emailTaken) { %>
    <span class="text-danger">The email entered is already registered.</span>
  <% } %>
</div>

<%- include("partials/footer.ejs") %>